<% include ../partials/header %>

	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-grouop">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
			<!-- map -->
			<div id="map"></div>
		</div>
		<div class="col-md-9">
			<div class="card mb-4">
				<img class="card-img-top" src="<%=campground.image%>">
				<div class="card-body">
					<div class="d-flex justify-content-between">
						<h5 class="card-title"><a href=""><%=campground.name %></a></h5>
						<h5 class="text-right">â‚¬<%=campground.price%>/night</h5>
					</div>
					<p><%=campground.description %></p>
					<p>
						<em>Submitted By <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em>
					</p>

					<% if (currentUser && (campground.author.id.equals(currentUser._id) || currentUser.role === 'ADMIN')) {%>
						<a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
						<form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=delete" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
					<% }%>

				</div>
			</div>
			<div class="card">
				<div class="card-header d-flex justify-content-between">
					<h5 class="card-title">User reviews</h5>
					<a class="btn btn-success btn-sm" href="/campgrounds/<%=campground._id%>/comments/new">Add new Comment</a>
				</div>

				<ul class="list-group list-group-flush">
					<%campground.comments.forEach(function(comment) {%>
						<li class="list-group-item py-1">
							<div class="row justify-content-between">
								<strong><%=comment.author.username%></strong>
								<span><%= moment(comment.createdAt).fromNow() %></span>
							</div>
							<p>
								<%=comment.text%>
							</p>	
							<% if (currentUser && comment.author.id.equals(currentUser.id)) {%>
								<a class="btn btn-xs btn-warning"
									href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
								<form class="delete-form" action="/campgrounds/<%=campground.id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
									<input type="submit" class="btn btn-xs btn-danger" value="Delete">
								</form>
							<% }%>							
						</li>
					<%})%>	
				</ul>
			</div>
		</div>
	</div>

<% include ../partials/footer %>