<% include ../partials/header %>

	<header class="jumbotron">
		<div class="container">
			<h1 class="display-4">Welcome to YelpCamp</h1>
			<p class="lead">View our hand-picked camp grounds from all over the world</p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
			<p>
				<form class="form-inline" action="/campgrounds" method="GET">
					<div class="input-group mb-2 mr-sm-2">
						<label class="sr-only" for="searchFilter">Name</label>
						<input type="text" name="search" id="searchFilter" class="form-control mb-2 mr-sm-2" placeholder="Campground search ..." >
						<input type="submit" value="Search" class="btn btn-primary mb-2">
					</div>
				</form>

			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
				<% if (queryMessage) {%>
					<h3><%=queryMessage%></h3>
					<%} else {%>
					<h3>Our Most Popular Campgrounds</h3>
				<%}%>
		</div>
	</div>

	<div class="row text-center" style="display:flex; flex-wrap: wrap">
		<% campgrounds.forEach(function(camp) {%>
			<div class="col-sm-6 col-md-4 col-lg-3">
				<div class="thumbnail">
					<img src="<%=camp.image%>">
				</div>
				<div class="camption">
					<h4><%=camp.name%></h4>
				</div>
				<p>
					<a href="/campgrounds/<%=camp.id%>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		<%}) %>
	</div>

<% include ../partials/footer %>