<%- include('./partials/header') -%>

<h1 class="d-block text-center mb-4 mt-5">Sign Up</h1>
<div class="row">
    <div class="col-12 col-sm-9 col-lg-6 mx-auto">
        <form action="/register" method="POST">
            <div class="form-group row">
                <label for="username" class="col-form-label col-md-3">Username</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="username" placeholder="mickey" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-form-label col-md-3">Password</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" name="password" placeholder="password" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="fullName" class="col-form-label col-md-3">Personal Name</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="fullName" placeholder="Mickey Mouse" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="avatar" class="col-form-label col-md-3">Avatar</label>
                <div class="col-md-9">
                    <input type="url" class="form-control" name="avatar" placeholder="image url" pattern=".*(png|jpg|gif)">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-form-label col-md-3">Email address</label>
                <div class="col-md-9">
                    <input type="email" class="form-control" name="email" placeholder="mickey@mouse.com" required>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <div class="col-md-9">
                    <button class="btn btn-primary">Sign Up</button>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') -%>